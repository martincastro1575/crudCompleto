<%- include('./partials/header') %>
    <h1>Crear Pelicula</h1>
    <form action="/peliculas/editar/<%= pelicula.id %>" method="post">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" id="" value="<%= pelicula.title %>">
        </div>
        <div>
            <label for="">Premios</label>
            <input type="text" name="premio" id="premio" value="<%= pelicula.awards %>">
        </div>
        <div>
            <label for="">Duracion</label>
            <input type="text" name="duracion" id="" value="<%= pelicula.length %>">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" id="" value="<%= pelicula.rating %>">
        </div>
        <div>
            <label for="">Fecha de Estremo</label>
            <input type="date" name="fecha_lanzamiento" id="" value="<%= pelicula.release_date %>">
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genero" id="">
                <% for( let index = 0; index < generos.length; index++ ) { %>
                    <% if (generos[index].id == pelicula.genre_id) { %>
                    
                        <option value="<%= generos[index].id %>" selected>
                            <%= generos[index].name %>
                        </option>
                    <% } else { %>
                        <option value="<%= generos[index].id %>">
                            <%= generos[index].name %>
                        </option>
                    <% } %>
                <% } %>
            </select>
            
        </div>
        <div>
            
            <button type="submit">Actualizar</button>
        </div>
    </form>

<%- include('./partials/footer.ejs') %> 