<%- include('./partials/header') %>
    <h1>Crear Pelicula</h1>
    <form action="/peliculas/crear" method="post">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" id="">
        </div>
        <div>
            <label for="">Premios</label>
            <input type="text" name="premio" id="premio">
        </div>
        <div>
            <label for="">Duracion</label>
            <input type="text" name="duracion" id="length">
        </div>
        <div>
            <label for="">Rating</label>
            <input type="text" name="rating" id="rating">
        </div>
        <div>
            <label for="">Fecha de Estremo</label>
            <input type="date" name="fecha_lanzamiento" id="fecha_lanzamiento">
        </div>
        <div>
            <label for="">Genero</label>
            <select name="genero" id="">
                <% for( let index = 0; index < generos.length; index++ ) { %>
                    <option value="<%= generos[index].id %>">
                        <%= generos[index].name %>
                    </option>
                <% } %>
            </select>
            
        </div>
        <div>
            
            <button type="submit">Crear</button>
        </div>
    </form>

<%- include('./partials/footer.ejs') %> 